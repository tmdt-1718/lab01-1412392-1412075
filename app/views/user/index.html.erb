<h1 class="text-info">Register Page</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<% if flash[:error].nil? %>

			<% else %>
			<h3 class="text-danger"><%= flash[:error]%></h3>
			<% end %>
			
			<%= form_with scope: :user,local: true do |f|%>

				<div class="form-group hidden">
					<label class="label-control">
						ID
					</label>

					<%= f.text_field :user_id,class: "form-control",
					value:  @numberuser,
					style: "width:50%"

					%>
					
				</div>

				<div class="form-group">
					<label class="label-control">
						Name
					</label>

					<%= f.text_field :user_name,class: "form-control",style: "width:50%" , placeholder:"john smith"%>
					
				</div>


				<div class="form-group">
					<label class="label-control">
						Email
					</label>

					<%= f.text_field :email,class: "form-control",style: "width:50%" , placeholder:"abc@gmail.com"%>
					
				</div>

				<div class="form-group">
					<label class="label-control">
						Password
					</label>

					<%= f.password_field :password,
					id: 'password1',
					class: "form-control",style: "width:50%" %>
					
				</div>

				<div class="form-group">
					<label class="label-control">
						Confirm Password
					</label>

					<%= f.password_field :passwordconfirm,class: "form-control",
					id: 'password2',
					style: "width:50%" %>

					<p id="passwordcheckmeg" style="font-style: italic;"></p>
					
				</div>

				<button type="submit" class="btn btn-primary">Signup</button>


			<% end%>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function()
	{

		$('#password2').keyup(function(e)
		{
			var pass1=$('#password1').val();		
			var pass2=$('#password2').val();
			if(pass2 != pass1)
			{
				$('#password2').css('border','1px solid red');
				$('#passwordcheckmeg').html("Password incorrect");
				$('#passwordcheckmeg').css("color","red");
			}
			else{
				$('#password2').css('border','1px solid green');
				$('#passwordcheckmeg').html("Password ok");
				$('#passwordcheckmeg').css("color","green");
			}

		});
	});
</script>