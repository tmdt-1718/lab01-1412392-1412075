<h1 class="text-info">Login Page</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<% if flash[:error].nil? %>

			<% else %>
			<h3 class="text-danger"><%= flash[:error]%></h3>
			<% end %>
			
			<%= form_with scope: :session,local: true do |f|%>

				<div class="form-group">
					<label class="label-control">
						Email
					</label>

					<%= f.text_field :email,class: "form-control",style: "width:50%" , placeholder:"abc@gmail.com"%>
					
				</div>

				<div class="form-group">
					<label class="label-control">
						Password
					</label>

					<%= f.password_field :password,class: "form-control",style: "width:50%" %>
					
				</div>
				<button type="submit" class="btn btn-primary">Login</button>

				<%= link_to "Register account",'/signup',class: 'nav-link'%>

			<% end%>
		</div>
	</div>
</div>